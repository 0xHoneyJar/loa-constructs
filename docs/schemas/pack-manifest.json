{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://constructs.network/schemas/pack-manifest.json",
  "title": "Loa Constructs Pack Manifest",
  "description": "Schema for skill pack manifest.json files",
  "type": "object",
  "required": ["name", "version", "description", "skills"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 3,
      "maxLength": 50,
      "description": "Pack name (lowercase alphanumeric with hyphens)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$",
      "description": "Semantic version (e.g., 1.0.0, 2.1.0-beta.1)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Short description (displayed in listings)"
    },
    "longDescription": {
      "type": "string",
      "maxLength": 5000,
      "description": "Detailed description with markdown support"
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Author's display name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Author's contact email"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Author's website"
        }
      }
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source code repository URL"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Pack homepage or documentation URL"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier (e.g., MIT, Apache-2.0)"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "maxItems": 10,
      "description": "Search keywords for discoverability"
    },
    "skills": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Skill identifier"
          },
          "path": {
            "type": "string",
            "description": "Relative path to skill directory"
          },
          "description": {
            "type": "string",
            "maxLength": 200,
            "description": "Brief skill description"
          }
        }
      },
      "description": "List of skills included in this pack"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^/[a-z0-9-]+$",
            "description": "Command name (must start with /)"
          },
          "path": {
            "type": "string",
            "description": "Relative path to command file"
          },
          "description": {
            "type": "string",
            "maxLength": 200,
            "description": "Brief command description"
          }
        }
      },
      "description": "List of commands that invoke skills"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Dependent pack name"
          },
          "version": {
            "type": "string",
            "description": "Version requirement (e.g., ^1.0.0, >=2.0.0)"
          }
        }
      },
      "description": "Other packs this pack depends on"
    },
    "minLoaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Minimum Loa framework version required"
    },
    "maxLoaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Maximum Loa framework version supported"
    },
    "tier": {
      "type": "string",
      "enum": ["free", "pro", "team", "enterprise"],
      "default": "free",
      "description": "Subscription tier required to use this pack"
    },
    "category": {
      "type": "string",
      "enum": [
        "gtm",
        "documentation",
        "security",
        "deployment",
        "testing",
        "analytics",
        "productivity",
        "integration",
        "other"
      ],
      "description": "Primary category for the pack"
    },
    "config": {
      "type": "object",
      "description": "Default configuration options",
      "additionalProperties": true
    },
    "engines": {
      "type": "object",
      "properties": {
        "node": {
          "type": "string",
          "description": "Node.js version requirement"
        }
      },
      "description": "Runtime requirements"
    },
    "private": {
      "type": "boolean",
      "default": false,
      "description": "If true, pack won't be listed publicly"
    }
  },
  "additionalProperties": false
}
