{
  "name": "loa-skills-registry",
  "private": true,
  "version": "0.1.0",
  "description": "SaaS platform for distributing, licensing, and monetizing AI agent skills",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.2.0",
    "tsx": "^4.19.0",
    "turbo": "^2.3.0",
    "typescript": "^5.4.0"
  }
}
