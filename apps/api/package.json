{
  "name": "@loa-constructs/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:mock": "DEV_MOCK_DB=true tsx watch src/index.ts",
    "dev:setup": "tsx scripts/dev-setup.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed:categories": "tsx src/db/seed-categories.ts",
    "db:reset": "tsx scripts/db-reset.ts",
    "keys:generate": "tsx scripts/generate-jwt-keys.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/s3-request-presigner": "^3.958.0",
    "@hono/node-server": "^1.13.0",
    "@hono/zod-validator": "^0.4.1",
    "@upstash/redis": "^1.34.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "jose": "^5.9.0",
    "pino": "^9.5.0",
    "postgres": "^3.4.8",
    "resend": "^4.0.0",
    "stripe": "^20.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "drizzle-kit": "^0.28.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0",
    "vitest": "^2.1.0"
  }
}
