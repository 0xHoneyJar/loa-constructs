{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://constructs.network/schemas/construct-manifest.json",
  "title": "Construct Manifest",
  "description": "Schema for construct.yaml manifest files",
  "type": "object",
  "required": ["name", "version", "type"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$|^[a-z0-9]$",
      "description": "Unique identifier (slug format)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "type": {
      "type": "string",
      "enum": ["skill", "pack", "bundle"],
      "description": "Construct type"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Short description"
    },
    "author": {
      "type": "string",
      "maxLength": 100,
      "description": "Author name or organization"
    },
    "license": {
      "type": "string",
      "enum": ["MIT", "Apache-2.0", "proprietary", "UNLICENSED"],
      "description": "License type"
    },
    "skills": {
      "type": "array",
      "description": "Skills included in this construct",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Skill slug"
          },
          "version": {
            "type": "string",
            "description": "Version constraint (e.g., >=1.0.0)"
          },
          "required": {
            "type": "boolean",
            "default": true,
            "description": "Whether skill is required"
          }
        }
      }
    },
    "commands": {
      "type": "array",
      "description": "Entry point commands",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^/",
            "description": "Command name (must start with /)"
          },
          "skill": {
            "type": "string",
            "description": "Associated skill"
          },
          "description": {
            "type": "string",
            "description": "Command description"
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "description": "External dependencies",
      "properties": {
        "skills": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required skill slugs"
        },
        "tools": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required CLI tools"
        }
      }
    },
    "cultural_contexts": {
      "type": "object",
      "description": "Cultural context requirements",
      "properties": {
        "required": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required cultural contexts"
        },
        "optional": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Optional cultural contexts"
        }
      }
    },
    "directories": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Directory scaffolding paths"
    },
    "hooks": {
      "type": "object",
      "description": "Installation hooks",
      "properties": {
        "post_install": {
          "type": "string",
          "description": "Command to run after installation"
        },
        "post_update": {
          "type": "string",
          "description": "Command to run after update"
        }
      }
    },
    "unix": {
      "type": "object",
      "description": "Unix philosophy metadata",
      "properties": {
        "inputs": {
          "type": "array",
          "description": "Input types this construct accepts"
        },
        "outputs": {
          "type": "array",
          "description": "Output types this construct produces"
        },
        "composes_with": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Constructs this composes well with"
        }
      }
    },
    "tier_required": {
      "type": "string",
      "enum": ["free", "pro", "team", "enterprise"],
      "description": "Minimum subscription tier required"
    },
    "claude_instructions": {
      "type": "string",
      "maxLength": 500,
      "pattern": "\\.md$",
      "description": "Path to CLAUDE.md instruction fragment file (must end with .md). Max file size: 4KB."
    },
    "schema_version": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Manifest schema version"
    },
    "tools": {
      "type": "object",
      "description": "CLI tool dependencies. Keys are tool binary names.",
      "additionalProperties": {
        "type": "object",
        "required": ["purpose", "check"],
        "properties": {
          "install": {
            "type": "string",
            "maxLength": 500,
            "description": "Shell command to install (documentation only, never auto-executed)"
          },
          "required": {
            "type": "boolean",
            "default": false,
            "description": "Whether pack is non-functional without this tool"
          },
          "purpose": {
            "type": "string",
            "maxLength": 200,
            "description": "Why this tool is needed"
          },
          "check": {
            "type": "string",
            "maxLength": 200,
            "description": "Shell command to verify installation (exit 0 = installed)"
          },
          "docs_url": {
            "type": "string",
            "format": "uri",
            "description": "Documentation link"
          }
        }
      }
    },
    "mcp_servers": {
      "type": "object",
      "description": "MCP servers this construct provides.",
      "additionalProperties": {
        "type": "object",
        "required": ["description", "transport"],
        "properties": {
          "description": {
            "type": "string",
            "maxLength": 300
          },
          "transport": {
            "type": "string",
            "enum": ["stdio", "sse"]
          },
          "command": {
            "type": "string",
            "maxLength": 200,
            "description": "Binary to launch (for stdio transport)"
          },
          "args": {
            "type": "array",
            "items": { "type": "string" }
          },
          "endpoint": {
            "type": "string",
            "format": "uri",
            "description": "URL for SSE transport"
          },
          "env": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "scopes": {
            "type": "array",
            "items": { "type": "string", "maxLength": 100 },
            "description": "MCP tool names this server exposes"
          },
          "security": {
            "type": "object",
            "properties": {
              "risk_level": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              },
              "data_access": {
                "type": "string",
                "enum": ["read-only", "read-write"]
              }
            }
          },
          "auto_start": {
            "type": "boolean",
            "default": false,
            "description": "Must be false by default for security"
          }
        }
      }
    },
    "mcp_dependencies": {
      "type": "object",
      "description": "MCP servers this construct consumes. Keys should match mcp-registry.yaml entries.",
      "additionalProperties": {
        "type": "object",
        "required": ["reason"],
        "properties": {
          "required": {
            "type": "boolean",
            "default": false
          },
          "required_scopes": {
            "type": "array",
            "items": { "type": "string", "maxLength": 50 },
            "description": "Scopes needed from the external server"
          },
          "reason": {
            "type": "string",
            "maxLength": 200
          },
          "fallback": {
            "type": "string",
            "maxLength": 300,
            "description": "What happens without this server"
          }
        }
      }
    }
  }
}
