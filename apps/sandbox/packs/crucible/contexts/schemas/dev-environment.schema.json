{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dev Environment",
  "description": "Local development URLs, paths, and configuration",
  "type": "object",
  "required": ["base_url"],
  "properties": {
    "base_url": { "type": "string", "format": "uri", "default": "http://localhost:3000" },
    "dev_port": { "type": "integer", "default": 3000 },
    "qa_cli_path": { "type": "string", "description": "Path to QA CLI component" },
    "qa_storage_key": { "type": "string", "description": "localStorage key for QA fixture injection" }
  }
}
