{
  "schema_version": 3,
  "name": "Sigil of the Beacon",
  "slug": "beacon",
  "version": "1.1.0",
  "description": "Signal readiness to the agent network with AI-retrievable content, trust auditing, and x402 payment endpoints",
  "author": "0xHoneyJar",
  "license": "MIT",
  "skills": [
    {"slug": "auditing-content", "path": "skills/auditing-content"},
    {"slug": "generating-markdown", "path": "skills/generating-markdown"},
    {"slug": "optimizing-chunks", "path": "skills/optimizing-chunks"},
    {"slug": "discovering-endpoints", "path": "skills/discovering-endpoints"},
    {"slug": "defining-actions", "path": "skills/defining-actions"},
    {"slug": "accepting-payments", "path": "skills/accepting-payments"}
  ],
  "contexts": {
    "schemas_dir": "contexts/schemas",
    "overlays_dir": "contexts/overlays"
  },
  "pack_dependencies": [],
  "events": {
    "emits": [
      {
        "type": "forge.beacon.discovery_generated",
        "description": "Emitted when a /.well-known/x402 discovery endpoint is generated",
        "data_schema": {"endpoint_path": "string", "service_name": "string"}
      },
      {
        "type": "forge.beacon.middleware_generated",
        "description": "Emitted when x402 payment middleware is generated for an endpoint",
        "data_schema": {"endpoint_path": "string", "pricing": "object"}
      }
    ],
    "consumes": []
  },
  "hooks": {
    "post_install": "scripts/install.sh"
  },
  "quick_start": {
    "command": "/audit-content",
    "description": "check your site's LLM readiness"
  }
}
