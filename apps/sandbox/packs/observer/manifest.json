{
  "schema_version": 3,
  "name": "Observer",
  "slug": "observer",
  "version": "1.1.0",
  "description": "User truth capture skills for hypothesis-first research",
  "author": "0xHoneyJar",
  "license": "MIT",
  "mcp_dependencies": {
    "agentation": {
      "required": false,
      "required_scopes": ["agentation_list_sessions", "agentation_get_pending"],
      "reason": "Visual annotation capture for user research",
      "fallback": "Manual observation via /observe quotes"
    }
  },
  "quick_start": {
    "command": "/observe",
    "description": "capture user feedback as hypothesis-first research"
  },
  "skills": [
    {"slug": "observing-users", "path": "skills/observing-users"},
    {"slug": "shaping-journeys", "path": "skills/shaping-journeys"},
    {"slug": "level-3-diagnostic", "path": "skills/level-3-diagnostic"},
    {"slug": "analyzing-gaps", "path": "skills/analyzing-gaps"},
    {"slug": "filing-gaps", "path": "skills/filing-gaps"},
    {"slug": "importing-research", "path": "skills/importing-research"}
  ],
  "contexts": {
    "base": "contexts/base/crypto-base.md",
    "overlays_dir": "contexts/overlays",
    "composed_dir": "contexts/composed"
  },
  "pack_dependencies": [
    {
      "pack": "crucible",
      "required": false,
      "relationship": "consumes",
      "artifacts": ["grimoires/crucible/gaps/*.md"],
      "description": "Gap analysis reports feed back into user research"
    },
    {
      "pack": "artisan",
      "required": false,
      "relationship": "consumes",
      "artifacts": ["grimoires/artisan/observations/*.md"],
      "description": "Design observations inform user research"
    }
  ],
  "events": {
    "emits": [
      {
        "type": "forge.observer.canvas_created",
        "description": "Emitted when a new user truth canvas is created",
        "data_schema": {"user_id": "string", "canvas_path": "string"}
      },
      {
        "type": "forge.observer.journey_shaped",
        "description": "Emitted when a user journey is shaped from canvases",
        "data_schema": {"journey_id": "string", "journey_path": "string"}
      },
      {
        "type": "forge.observer.gap_filed",
        "description": "Emitted when a gap analysis issue is filed",
        "data_schema": {"gap_id": "string", "issue_url": "string"}
      }
    ],
    "consumes": [
      {
        "type": "forge.crucible.journey_validated",
        "description": "Journey validation results feed back into research"
      }
    ]
  },
  "hooks": {
    "post_install": "scripts/install.sh"
  }
}
