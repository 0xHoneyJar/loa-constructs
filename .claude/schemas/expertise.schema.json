{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Construct Expertise",
  "description": "Identity expertise schema — validates domain knowledge boundaries.",
  "type": "object",
  "required": ["domains"],
  "properties": {
    "domains": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "depth"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Domain name"
          },
          "depth": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "description": "Expertise depth (1=aware, 3=proficient, 5=world-class)"
          },
          "specializations": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Specific areas of deep knowledge within this domain"
          },
          "boundaries": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Explicit boundaries — what this construct does NOT cover"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
